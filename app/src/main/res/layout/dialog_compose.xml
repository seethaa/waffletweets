<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="10dp"
        tools:src="@drawable/ic_launcher"
        android:id="@+id/ivProfileImage" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:background="#0000"
        android:src="@drawable/deleteblue"
        android:id="@+id/btnCancel"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:ems="10"
        android:maxLines="10"
        android:hint="@string/whats_happening"
        android:id="@+id/etComposeTweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnCancel"
        android:layout_alignEnd="@+id/btnCancel"
        android:layout_below="@+id/ivProfileImage"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:background="#0000"
        android:src="@drawable/tweetbutton"
        android:clickable="true"
        android:id="@+id/btnTweet"
        android:layout_below="@+id/etComposeTweet"
        android:layout_centerHorizontal="true" />
</RelativeLayout>